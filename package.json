{
    "name": "@btc-vision/plugin-sdk",
    "version": "1.0.1",
    "type": "module",
    "description": "SDK for developing OPNet node plugins",
    "author": "OP_NET",
    "license": "Apache-2.0",
    "homepage": "https://opnet.org",
    "repository": {
        "type": "git",
        "url": "git://github.com/btc-vision/plugin-sdk.git"
    },
    "engines": {
        "node": ">=20.0.0"
    },
    "exports": {
        ".": {
            "import": "./build/index.js",
            "require": "./build/index.js",
            "types": "./build/index.d.ts"
        }
    },
    "main": "build/index.js",
    "types": "build/index.d.ts",
    "typings": "build/index.d.ts",
    "module": "build/index.js",
    "publishConfig": {
        "access": "public",
        "tag": "latest"
    },
    "scripts": {
        "build": "gulp build",
        "watch": "gulp watch",
        "clean": "gulp clean",
        "lint": "eslint src/",
        "format": "prettier --write src/"
    },
    "devDependencies": {
        "@eslint/js": "^10.0.1",
        "@types/node": "^25.2.3",
        "eslint": "^10.0.0",
        "gulp": "^5.0.1",
        "gulp-cached": "^1.1.1",
        "gulp-clean": "^0.4.0",
        "gulp-eslint-new": "^2.6.0",
        "gulp-logger-new": "^1.0.1",
        "gulp-typescript": "^6.0.0-alpha.1",
        "prettier": "^3.8.1",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.56.0"
    },
    "keywords": [
        "opnet",
        "plugin",
        "sdk",
        "bitcoin",
        "typescript",
        "blockchain"
    ],
    "dependencies": {
        "@btc-vision/bitcoin": "^7.0.0-rc.4"
    }
}
